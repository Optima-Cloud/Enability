                    var tmpGrandSubTotal = 0;
                    var tmpGrandDiscount = 0;                    
                    for (var icnt = 1; icnt  < {!subtotalrowNum}; icnt ++) {
                        
                        if($( ".QUANTITY"+icnt ).val()==""){
                            $( ".QUANTITY"+icnt ).val("1.0");
                            
                        }
                    
                        //EUR Format
                        //var tmpQuantity = parseFloat( $( ".QUANTITY"+icnt ).val().toString().replace(".","").replace(",","."));
