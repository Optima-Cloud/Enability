                        //USD Format
                        $( ".SUBTOTAL"+icnt ).text("$"+(tmpQuantity*tmpUnitPrice).toFixed(2) );
                    }                    
                }
        </script>                           
    <script> 
        gridcalcUnitPrice();            
    </script>
    <apex:outputpanel id="debugstat"> 
           
    </apex:outputpanel>
</apex:page>